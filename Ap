#include <stdio.h>
#include <stdlib.h>

int main()
{
    int **ap= NULL;
    int numRen;
    int numCol ;
    int i, j, a;
    int counter = 0;
    puts("Ingrese el numero de renglones");
    scanf("%d", &numRen);
    puts("Ingrese el numero de columnas");
    scanf("%d", &numCol);
    
    
    ap = (int**)malloc(numRen*numCol*sizeof(int));
    //ap = (int**)malloc(numCol*sizeof(int));
    if(ap == NULL)
    {cd 
         puts("Memoria insuficiente");
         exit(0);      
    }
    
    for(i=0;i<numRen;i++)
    {
         for(j=0;j<numCol;j++)
         {
          printf("Ingrese el valor para [%d][%d]: ", i +1, j+1);
          //scanf("%d", &a);
          scanf("%d", &(ap[i][j]));
          if((ap[i][j]) == 0)
                    counter++;
                    
                                
         }                      
    }
    puts("");
    puts("Los valores asignados a la matriz son \n");   
    
    
    for(i=0;i<numRen;i++)
    {
        for(j=0;j<numCol;j++)
        {
         printf("[%d][%d]: %d\n", i+1, j+1, ap[i][j]);                     
        }                     
    }
    
    printf("El numero de ceros en la matriz es de: %d", counter);
    
    free(ap);
    fflush(stdin);
    getchar();
    system("pause");
     
}
